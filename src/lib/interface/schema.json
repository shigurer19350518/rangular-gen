{
    "$schema": "http://json-schema.org/schema",
    "$id": "SchematicsInterface",
    "title": "Interface Options Schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the Interface.",
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "What name would you like to use for the Interface?"
        },
        "path": {
            "type": "string",
            "format": "path",
            "description": "The path to create the Interface.",
            "$default": {
                "$source": "argv",
                "index": 1
            }
        }
    },
    "required": [
        "name"
    ]
}